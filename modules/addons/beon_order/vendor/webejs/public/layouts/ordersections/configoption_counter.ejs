<div class="counter">
    <h4 class="form-title"> <%= optionname %> </h4>
    <div class="input-group inline-group">
        <div class="input-group-addon">
            <button class="btn btn-fill-primary btn-minus">
                <i class="fa fa-minus"></i>
            </button>
        </div>
        <input class="form-control quantity config-quantity" min="<%= min %>" max="<%= max %>" name="quantity" value="<%= value %>" type="number" data-id="<%= id %>">
        <div class="input-group-addon">
            <button class="btn btn-fill-primary btn-plus">
                <i class="fa fa-plus"></i>
            </button>
        </div>
    </div>
</div>