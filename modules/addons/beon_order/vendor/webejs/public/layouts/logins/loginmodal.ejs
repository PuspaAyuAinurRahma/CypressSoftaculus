                                <input type="email" class="form-control" name="email" placeholder="Enter email">
                            </div>
                            <div class="form-group form-login">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" name="password" placeholder="Password">
                            </div>
                            <div class="form-group btn-login">
                                <button class="btn btn-block btn-fill-primary" name="submit">
                                    <i class="fa fa-spin fa-spinner hidden"></i> 
                                    Masuk 
                                </button>
                            </div>
                        </form>
                        <p class="text-center" id="forgot-pwd"><a href="" id="Lupa_Password">Lupa Password?</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="text-center"><strong> Belum punya akun? </strong></h5>
                        <a id="register-btn" href="#" class="btn btn-block btn-default"> Daftar Akun Baru </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
